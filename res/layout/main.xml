<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<TextView android:id="@+id/TextView02" 
	android:layout_height="wrap_content" 
	android:text="URL Shortener" 
	android:textSize="12pt" 
	android:layout_gravity="center_horizontal" 
	android:layout_width="wrap_content"/>

<TextView android:id="@+id/TextView01" 
	android:layout_height="wrap_content" 
	android:text="By Chris Holmes" 
	android:layout_gravity="center_horizontal" 
	android:layout_width="wrap_content"/>



<EditText android:id="@+id/myEditText" android:layout_height="wrap_content" android:layout_width="fill_parent" android:hint="Enter Long URL"></EditText><EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:hint="Custom URL" android:id="@+id/CustomURL"></EditText><Button android:text="Shorten" 
	android:layout_height="wrap_content" 
	android:layout_width="fill_parent" 
	android:id="@+id/myButton"/>








</LinearLayout>
